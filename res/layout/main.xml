<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:background="@drawable/bg" >

        <ViewStub
            android:id="@+id/homeView"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout="@layout/home" />

        <ViewStub
            android:id="@+id/mealsView"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout="@layout/menu" />

        <ViewStub
            android:id="@+id/exerciseView"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout="@layout/exercise" />

        <ViewStub
            android:id="@+id/insulineView"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout="@layout/insulin" />

        <ViewStub
            android:id="@+id/reportView"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout="@layout/reports" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg"
            android:src="@drawable/dropover" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg"
            android:src="@drawable/meal" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg"
            android:src="@drawable/exce" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg"
            android:src="@drawable/med" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg"
            android:src="@drawable/graph" />
    </LinearLayout>

</LinearLayout>