<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg" >

        <Spinner
            android:id="@+id/spinner1"  
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="50dp" />


        <DatePicker
            android:id="@+id/datePickerExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical|center_horizontal"
            android:layout_marginTop="120dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="30dp"
            android:text="Choose Type of Exercise:" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="100dp"
            android:text="Choose Exercise Date:" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="Exercise Schedule"
            android:textAppearance="?android:attr/textAppearanceLarge" />





        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left|center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:text="Duration in Hours:" />


        <EditText
            android:id="@+id/editTextHours"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="270dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right|center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="250dp"
            android:text="Duration in Minutes:" />


        <EditText
            android:id="@+id/editTextMinutes"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right|center_vertical"
            android:layout_marginRight="50dp"
            android:layout_marginTop="270dp"
            android:ems="10"
            android:inputType="number" />






        <Button
            android:id="@+id/buttonAddWorkout"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="300dp"
            android:text="Add Workout" />





        <TextView
            android:id="@+id/txtMsgBox"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical|center_horizontal"
            android:layout_marginTop="350dp"
            android:textColor="#FFFFFF" />

              <Button
                  android:id="@+id/back"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:text="Back to Previous Screen" />

    </FrameLayout>

</LinearLayout>